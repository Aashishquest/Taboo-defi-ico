<div class="heading-row mb-20">
    <div class="row align-item-center">
       <div class="col-lg-6">
          <h3 class="page-title"><span class="page-title-icon bg-gradient-primary text-white mr-2"><i class="mdi mdi-clipboard-check"></i></span>Transaction History</h3>
       </div>
      
  </div>
  </div>
  <div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
      <div class="card">
         <div class="card-header">
           <div class="row">
           
             <div class="col-md-3">
                  <div class="form-group">
                   <div class="input-group mb-3">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="basic-addon1">From</span>
                    </div>
                    <input type="text" class="form-control min" id="datepicker" placeholder="Date">
                  </div>
                  </div>
              </div>
              <div class="col-md-3">
                    <div class="form-group">
                     <div class="input-group mb-3">
                      <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">To</span>
                      </div>
                      <input type="text" class="form-control max" id="datepicker1" placeholder="Date">
                    </div>
                    </div>
              </div>
               <div class="col-md-2 ">
                  <div class="form-group d-none">
                    <select id="select-new" class="form-control">
                        <option>Select Credits</option>
                        <option>$0 - $50</option>
                        <option>$50 - $100</option>
                        <option>$100 - $500</option>
                      </select>
                  </div>
            </div>
            <div class="col-md-2">
                  <div class="form-group d-none">
                    <select id="select-new2" class="form-control">
                        <option>Select Debits</option>
                        <option>$0 - $50</option>
                        <option>$50 - $100</option>
                        <option>$100 - $500</option>
                      </select>
                  </div>
            </div>
         </div>
         </div> 
        <div class="card-body table-responsive">
          <table class="table table-bordered"id="txtable">
            <thead>
              <tr>
                <th width="10%">S. No.</th>
                <th width="15%">Date</th>
                <th width="20%">User Wallet Address</th>
                <th width="10%">Amount Paid(in Taboo)</th>
                <th width="15%">Amount in USD</th>
                <th width="20%">Hash</th>
                <th width="10%">Status</th>
              </tr>
            </thead>
            <tbody>
              
                <% orders.forEach(function(order,index) {%> 
                <tr>
                  <td><%=index+1 %></td>
                  <td><%=order.created_at.split('T',2)[0] %></td>

                  <td><a href="https://ropsten.etherscan.io/address/<%=order.user_wallet_address %>" target="_blank"><%=order.user_wallet_address %></a></td>
                  <td><%=order.total %></td>
                  <td> <%=order.total/884 %> </td>
                  <td id="hash"><a href="https://ropsten.etherscan.io/tx/<%=order.trans_id %>" target="_blank"><%=order.trans_id %></a></td>
                  <td class="success-color"><%=order.status %></td>
                  
                   
                  
                </tr>
                <% }) %>
               

              
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  
<style>
    .heading-row.mb-20 {
    margin-top: 5%;
}
td#hash {
    overflow-x: scroll;
    max-width: 49px;
}
td.success-color {
    text-transform: capitalize;
}
  </style>
  

  